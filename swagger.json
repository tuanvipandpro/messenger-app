{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "App API Document",
    "description": "The Document for the messenger-app",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3001",
  "basePath": "/",
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "Header"
    }
  },
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["User"],
        "summary": "Validate firebase token and return app token.",
        "parameters": [
          {
            "in": "body",
            "name": "firebaseToken",
            "schema": {
              "type": "object",
              "required":["firebaseToken"],
              "properties": {
                "firebaseToken": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "security": [
          {"Bearer": []}
        ],
        "tags": ["User"],
        "summary": "Get available user",
        "parameters": [
          {
            "in": "query",
            "name": "pageNum",
            "description": "The total data in page.",
            "required": true,
            "type": "number"
          },
          {
            "in": "query",
            "name": "pageNo",
            "description": "The current page is selected.",
            "required": true,
            "type": "number"
          }
        ],
        "responses":{
          "200": {"description": "OK"}
        }     
      }
    },
    "/api/room": {
      "post": {
        "security": [
          {"Bearer": []}
        ],
        "tags": ["Room"],
        "summary": "Create Room",
        "responses":{
          "200": {"description": "OK"}
        }     
      }
    }
  },
  "definitions": {
    "User": {
      "$ref": "#/definitions/User",
      "required": ["appToken"],
      "properties": {
        "appToken": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        }
      }
    }
  }
}